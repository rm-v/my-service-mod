= form_for @trade do |f|
  - if @trade.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trade.errors.count, "error")} prohibited this trade from being saved:"
      %ul
        - @trade.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :branch_id
    = f.text_field :branch_id
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
