= form_for @slip_payment do |f|
  - if @slip_payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slip_payment.errors.count, "error")} prohibited this slip_payment from being saved:"
      %ul
        - @slip_payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :receipt_id
    = f.number_field :receipt_id
  .actions
    = f.submit 'Save'
